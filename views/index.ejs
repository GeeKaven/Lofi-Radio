<!DOCTYPE html>
<html>
  <head>
      <title><%= title %> - <%= desc %></title>
      <meta name="keywords" content="<%= title %>">
      <meta name="description" content="<%= desc %>">
      <link rel="stylesheet" href="/static/css/font-awesome.min.css">
      <link rel='stylesheet' href='/static/css/style.css' />
  </head>
  <body>
    <div id="main">
        <div id="background"></div>
        <div id="progress">
            <div class="played"></div>
        </div>
        <ul id="controll">
            <li class="item home"><i class="fa fa-home" aria-hidden="true"></i></li>
            <li class="item source"><i class="fa fa-github" aria-hidden="true"></i></li>
            <li class="item next"><i class="fa fa-chevron-right" aria-hidden="true"></i></li>
        </ul>
        <div id="topic">
            <div id="album">
                <div class="cover" data-state="paused">
                    <img src="/static/default.jpg" alt="">
                </div>
                <div class="toggle"><i class="fa fa-play"></i></div>
            </div>
            <div id="info">
                <div class="title">「标题」</div>
                <div class="article">歌手</div>
            </div>
        </div>
    </div>
    <script src="/static/js/jquery.min.js"></script>
    <script src="/static/js/app.js"></script>
  </body>
</html>
